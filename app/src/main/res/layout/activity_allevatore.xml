<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="411dp"
        android:layout_height="731dp"
        android:adjustViewBounds="true"
        android:background="@drawable/allevat"
        android:contentDescription="@string/background"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="348dp"
        android:layout_height="508dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:background="@color/Bordo_button"
        app:columnCount="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.71000004"
        app:rowCount="2">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:background="@color/Allevatore"
            android:drawableStart="@drawable/allevatore"
            android:paddingStart="30dp"
            android:paddingEnd="20dp"
            android:paddingTop="10dp"
            android:paddingVertical="30dp"
            android:text="@string/allevatore"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/Grid_text"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="0" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            android:text="@string/stato_mangiotoie"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="40dp"
            android:id="@+id/livelloMangiatoie"
            app:layout_column="0"
            app:layout_row="1" />

        <ProgressBar
            android:id="@+id/mangiatoieProgressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="65dp"
            app:layout_column="0"
            app:layout_row="1" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="150dp"
            android:text="@string/mangiatoie"
            app:layout_column="0"
            app:layout_row="1" />

        <Switch
            android:id="@+id/switchMangiatoie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="150dp"
            android:text="Switch"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="240dp"
            android:text="@string/cancelli_pascolo"
            app:layout_column="0"
            app:layout_row="1" />

        <Switch
            android:id="@+id/switchCancelli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="240dp"
            android:text="Switch"
            app:layout_column="0"
            app:layout_row="1" />


    </androidx.gridlayout.widget.GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>